package realized

import (
"fmt"
"strconv"
"thesis-management-app/types"
)

templ Details(thesis types.RealizedThesis) {
<div id={ fmt.Sprintf("details-%v", thesis.Id) }>
    Details
    <div>
        Thesis id
        <input type="number" id="id" name="id"
            class="w-1/2 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:border-blue-300"
            value={ strconv.Itoa(thesis.Id) } />
    </div>
    <div>
        Data Egzaminu
        <input type="date" id="exam-date" name="exam-date"
            class="w-1/2 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:border-blue-300"
            value={ thesis.ExamDate } />
    </div>
    <div>
        Polski Tytu≈Ç
        <input type="text" id="title" name="title"
            class="w-1/2 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:border-blue-300"
            value={ thesis.ThesisTitlePolish } />
    </div>
    <div hx-get={ fmt.Sprintf("/realized/%v", thesis.Id) } hx-target={ fmt.Sprintf("#details-%v", thesis.Id) }
        hx-trigger="click" hx-swap="outerHTML">
        <button>
            Zamknij
        </button>
    </div>
    <button>Zapisz</button>
</div>
}
