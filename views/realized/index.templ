package realized

import (
"thesis-management-app/types"
"thesis-management-app/views/components"
"thesis-management-app/views/layouts"
)

templ Index(thes_data []types.RealizedThesisEntry) {
@layouts.Base(true) {
<div class="flex flex-col items-center min-h-screen w-full p-4">
    <!-- Search Bar at the Top -->
    <div class="w-full max-w-5xl mb-4">
        @components.SearchBar("/realized")
    </div>
    <!-- Filters and Results Section -->
    <div class="flex w-full max-w-7xl justify-center">
        <!-- Filters on the Left -->
        <div class="flex-shrink-0 w-3/12 mr-2">
            <div class="p-2">
                @components.Filter(true)
            </div>
        </div>
        <!-- Results on the Right -->
        <div class="w-9/12">
            <div class="bg-white p-4 rounded shadow">
                @Results(thes_data)
            </div>
        </div>
    </div>
</div>
}
}
